<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pick_alarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bendworkin.safestroll.PickAlarm">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="Your Alarms "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textStyle="normal|bold"
            android:textSize="@android:dimen/app_icon_size"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:shadowDx="2"
            android:shadowDy="5"
            android:shadowRadius="1"
            android:shadowColor="@android:color/darker_gray" />

        <TextView
            android:text="Push Alarm To Start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="372dp"
            android:layout_weight="0.85"
            android:id="@+id/pickAlarmView"
            android:layout_gravity="center"
            android:textAlignment="center" />

        <Button
            android:text="START!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:background="@android:drawable/btn_default_small"
            android:onClick="startThisAlarm"
            android:shadowDx="2"
            android:shadowDy="5"
            android:shadowRadius="1"
            android:shadowColor="@android:color/darker_gray"
            android:textColor="@color/colorPrimary" />

        <Button
            android:text="Cancel "
            android:layout_width="582dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:gravity="center_vertical|center_horizontal|center"
            android:layout_gravity="center"
            android:background="@android:drawable/btn_default_small"
            android:elevation="24dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:shadowDx="2"
            android:shadowDy="5"
            android:shadowRadius="1"
            android:shadowColor="@color/white"
            android:onClick="toCancelAlarm" />
    </LinearLayout>
</RelativeLayout>
